<link rel="stylesheet" href="/css/signup.css">
<div class="signup-container">
    <h2>Create an Account</h2>
    <form class="signup-form" action="/users/create" method="post">
        <input type="text" class="form-input" placeholder="Full Name" required name="name">
        <input type="email" class="form-input" placeholder="Email Address" required name="email">
        <input type="password" class="form-input" placeholder="Password" required name="password">
        <button type="submit" class="form-button">Sign Up</button>
    </form>
</div>